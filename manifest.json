{
    "manifest_version": 3,
    "name": "Image Saver",
    "version": "1.0",
    "description": "Save images directly to a folder.",
    "permissions": ["contextMenus", "downloads", "activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }